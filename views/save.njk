{% extends 'create.njk' %}
{% block content %}
<section>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <div class="row panel panel-default">
                    <div class="container-fluid" data-bookId="{{book.getId()}}" data-publisherId="{{book.getPublisher().getId()}}" id ="book">
                        <div class="panel-heading">
                            <h1>UPDATE BOOK</h1>
                        </div>
                        <div>
                            <label for="title">Title : </label>
                            <input id="title" class="form-control" name="title" value="{{ book.getTitle() }}"/>
                        </div>
                        <div>
                            <label for="author">Author : </label>
                            <input id="author" name="author" class="form-control" value="{{ book.getAuthor() }}"/><label id="messageAuthor"></label>
                        </div>
                        <div>
                            <label for="publisher">Publisher</label>
                            <input id="publisher" name="publisher" class="form-control" value="{{book.getPublisher().getName()}}"><label id="messagePublisher"></label>
                        </div>
                        <div>
                            <label for="price">Price : </label>
                            <input id="price" name="price" class="form-control" value="{{ book.getPrice() }}"/>
                        </div>
                        <div class="form-group">
                            <button id="put" class="btn btn-success btn-block">
                                <i class="glyphicon glyphicon-save"></i>
                                <span class="hidden-sm hidden-xs">SAVE</span>
                            </button>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>
<script type="text/html" id="authorTemplate">
    <label>:message:</label>
</script>
<script type="text/html" id="publisherTemplate">
    <span id="publisherId" data-id=":id:">:message:</span>
</script>
{% endblock %}